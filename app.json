{
  "expo": {
    "name": "Silo",
    "slug": "silo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "silo",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0b"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.silo.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Silo needs access to your photos to import screenshots for organization.",
        "NSPhotoLibraryAddUsageDescription": "Silo needs permission to save images to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0a0a0b"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.silo.app",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-media-library",
        {
          "photosPermission": "Silo needs access to your photos to import screenshots.",
          "savePhotosPermission": "Allow Silo to save images.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ]
  }
}
