{
  "designSystem": {
    "name": "Silo Design System",
    "version": "2.0.0",
    "description": "Premium dark-mode design system for content creators, inspired by Opal's minimalist aesthetic with gradient accents",
    
    "philosophy": {
      "core": "Focus-first design that helps creators capture and organize inspiration without distraction",
      "feeling": "Premium, calm, focused, professional yet approachable",
      "principles": [
        "Minimal cognitive load - let content breathe",
        "Dark theme reduces eye strain during creative sessions",
        "Gradient accents create energy without overwhelming",
        "Clear visual hierarchy guides the eye naturally",
        "Subtle animations provide satisfying feedback"
      ]
    },

    "colors": {
      "background": {
        "primary": "#000000",
        "secondary": "#1C1C1E",
        "tertiary": "#2C2C2E",
        "elevated": "#3A3A3C",
        "description": "Pure black base with iOS-style gray elevations"
      },
      
      "text": {
        "primary": "#FFFFFF",
        "secondary": "rgba(255, 255, 255, 0.7)",
        "tertiary": "rgba(255, 255, 255, 0.5)",
        "quaternary": "rgba(255, 255, 255, 0.3)",
        "inverse": "#000000"
      },
      
      "accent": {
        "primary": "#D4FF2B",
        "primaryDark": "#A8CC22",
        "secondary": "#4ECDC4",
        "gradient": {
          "start": "#D4FF2B",
          "middle": "#9EE493",
          "end": "#4ECDC4",
          "angle": "135deg",
          "css": "linear-gradient(135deg, #D4FF2B 0%, #9EE493 50%, #4ECDC4 100%)"
        },
        "description": "Signature lime-to-teal gradient for CTAs and focus states"
      },
      
      "semantic": {
        "success": "#34C759",
        "warning": "#FF9F0A",
        "error": "#FF453A",
        "info": "#5AC8FA",
        "neutral": "#8E8E93"
      },
      
      "categories": {
        "videoIdea": {
          "primary": "#34C759",
          "background": "rgba(52, 199, 89, 0.15)",
          "border": "rgba(52, 199, 89, 0.3)"
        },
        "hook": {
          "primary": "#FF9F0A",
          "background": "rgba(255, 159, 10, 0.15)",
          "border": "rgba(255, 159, 10, 0.3)"
        },
        "thumbnail": {
          "primary": "#5AC8FA",
          "background": "rgba(90, 200, 250, 0.15)",
          "border": "rgba(90, 200, 250, 0.3)"
        },
        "script": {
          "primary": "#BF5AF2",
          "background": "rgba(191, 90, 242, 0.15)",
          "border": "rgba(191, 90, 242, 0.3)"
        },
        "visual": {
          "primary": "#FF375F",
          "background": "rgba(255, 55, 95, 0.15)",
          "border": "rgba(255, 55, 95, 0.3)"
        },
        "analytics": {
          "primary": "#64D2FF",
          "background": "rgba(100, 210, 255, 0.15)",
          "border": "rgba(100, 210, 255, 0.3)"
        }
      },

      "border": {
        "subtle": "rgba(255, 255, 255, 0.08)",
        "default": "rgba(255, 255, 255, 0.12)",
        "focus": "rgba(212, 255, 43, 0.5)",
        "strong": "rgba(255, 255, 255, 0.2)"
      },

      "overlay": {
        "light": "rgba(255, 255, 255, 0.05)",
        "medium": "rgba(0, 0, 0, 0.5)",
        "heavy": "rgba(0, 0, 0, 0.8)",
        "blur": "rgba(28, 28, 30, 0.85)"
      }
    },

    "typography": {
      "fontFamily": {
        "primary": "SF Pro Display, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "mono": "SF Mono, Monaco, 'Cascadia Code', 'Courier New', monospace"
      },
      
      "scale": {
        "display": {
          "fontSize": 48,
          "lineHeight": 56,
          "fontWeight": "700",
          "letterSpacing": -1.2,
          "usage": "Splash screen, hero text"
        },
        "h1": {
          "fontSize": 34,
          "lineHeight": 41,
          "fontWeight": "700",
          "letterSpacing": -0.5,
          "usage": "Screen titles, major headings"
        },
        "h2": {
          "fontSize": 28,
          "lineHeight": 34,
          "fontWeight": "600",
          "letterSpacing": -0.3,
          "usage": "Section headers"
        },
        "h3": {
          "fontSize": 22,
          "lineHeight": 28,
          "fontWeight": "600",
          "letterSpacing": 0,
          "usage": "Card titles, subsection headers"
        },
        "h4": {
          "fontSize": 20,
          "lineHeight": 25,
          "fontWeight": "600",
          "letterSpacing": 0,
          "usage": "List item titles"
        },
        "body": {
          "fontSize": 17,
          "lineHeight": 24,
          "fontWeight": "400",
          "letterSpacing": -0.2,
          "usage": "Primary content text"
        },
        "bodySmall": {
          "fontSize": 15,
          "lineHeight": 20,
          "fontWeight": "400",
          "letterSpacing": -0.2,
          "usage": "Secondary content, descriptions"
        },
        "caption": {
          "fontSize": 13,
          "lineHeight": 18,
          "fontWeight": "400",
          "letterSpacing": 0,
          "usage": "Labels, timestamps, meta info"
        },
        "captionSmall": {
          "fontSize": 11,
          "lineHeight": 14,
          "fontWeight": "500",
          "letterSpacing": 0.5,
          "textTransform": "uppercase",
          "usage": "Section labels, badges"
        },
        "button": {
          "fontSize": 17,
          "lineHeight": 22,
          "fontWeight": "600",
          "letterSpacing": -0.2,
          "usage": "Button labels"
        }
      }
    },

    "spacing": {
      "xxs": 2,
      "xs": 4,
      "sm": 8,
      "md": 12,
      "base": 16,
      "lg": 20,
      "xl": 24,
      "xxl": 32,
      "xxxl": 48,
      "huge": 64,
      "massive": 80,
      "description": "4px base unit system for consistent rhythm"
    },

    "borderRadius": {
      "none": 0,
      "xs": 4,
      "sm": 8,
      "md": 12,
      "lg": 16,
      "xl": 20,
      "xxl": 24,
      "xxxl": 32,
      "full": 9999,
      "description": "Softer radius values for friendly, modern feel"
    },

    "shadows": {
      "none": "none",
      "sm": {
        "shadowColor": "#000",
        "shadowOffset": { "width": 0, "height": 1 },
        "shadowOpacity": 0.3,
        "shadowRadius": 2,
        "elevation": 2
      },
      "md": {
        "shadowColor": "#000",
        "shadowOffset": { "width": 0, "height": 4 },
        "shadowOpacity": 0.4,
        "shadowRadius": 8,
        "elevation": 4
      },
      "lg": {
        "shadowColor": "#000",
        "shadowOffset": { "width": 0, "height": 8 },
        "shadowOpacity": 0.5,
        "shadowRadius": 16,
        "elevation": 8
      },
      "glow": {
        "shadowColor": "#D4FF2B",
        "shadowOffset": { "width": 0, "height": 0 },
        "shadowOpacity": 0.3,
        "shadowRadius": 12,
        "elevation": 0
      },
      "description": "Subtle shadows for depth in dark mode"
    },

    "animation": {
      "duration": {
        "instant": 100,
        "fast": 200,
        "normal": 300,
        "slow": 500,
        "verySlow": 800
      },
      "easing": {
        "default": "cubic-bezier(0.25, 0.1, 0.25, 1)",
        "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
        "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
        "spring": "cubic-bezier(0.34, 1.56, 0.64, 1)",
        "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
      },
      "patterns": {
        "fadeIn": { "from": { "opacity": 0 }, "to": { "opacity": 1 } },
        "slideUp": { "from": { "translateY": 20, "opacity": 0 }, "to": { "translateY": 0, "opacity": 1 } },
        "scaleIn": { "from": { "scale": 0.95, "opacity": 0 }, "to": { "scale": 1, "opacity": 1 } },
        "press": { "scale": 0.97 },
        "hover": { "scale": 1.02 }
      }
    },

    "components": {
      "button": {
        "primary": {
          "background": "linear-gradient(135deg, #D4FF2B 0%, #9EE493 50%, #4ECDC4 100%)",
          "textColor": "#000000",
          "borderRadius": 16,
          "paddingVertical": 16,
          "paddingHorizontal": 24,
          "fontWeight": "600",
          "fontSize": 17,
          "minHeight": 56
        },
        "secondary": {
          "background": "#2C2C2E",
          "textColor": "#FFFFFF",
          "borderRadius": 12,
          "paddingVertical": 12,
          "paddingHorizontal": 20,
          "borderWidth": 1,
          "borderColor": "rgba(255, 255, 255, 0.12)"
        },
        "ghost": {
          "background": "transparent",
          "textColor": "#D4FF2B",
          "paddingVertical": 12,
          "paddingHorizontal": 16
        },
        "danger": {
          "background": "rgba(255, 69, 58, 0.15)",
          "textColor": "#FF453A",
          "borderRadius": 12,
          "borderWidth": 1,
          "borderColor": "rgba(255, 69, 58, 0.3)"
        }
      },

      "card": {
        "default": {
          "background": "#1C1C1E",
          "borderRadius": 16,
          "borderWidth": 1,
          "borderColor": "rgba(255, 255, 255, 0.08)",
          "padding": 16
        },
        "elevated": {
          "background": "#2C2C2E",
          "borderRadius": 20,
          "padding": 20,
          "shadow": "md"
        },
        "interactive": {
          "background": "#1C1C1E",
          "borderRadius": 16,
          "padding": 16,
          "pressedBackground": "#2C2C2E"
        }
      },

      "input": {
        "background": "#1C1C1E",
        "textColor": "#FFFFFF",
        "placeholderColor": "rgba(255, 255, 255, 0.4)",
        "borderRadius": 12,
        "borderWidth": 1,
        "borderColor": "rgba(255, 255, 255, 0.12)",
        "focusBorderColor": "rgba(212, 255, 43, 0.5)",
        "paddingVertical": 14,
        "paddingHorizontal": 16,
        "fontSize": 17
      },

      "badge": {
        "small": {
          "paddingVertical": 4,
          "paddingHorizontal": 8,
          "borderRadius": 6,
          "fontSize": 11,
          "fontWeight": "600",
          "textTransform": "uppercase"
        },
        "default": {
          "paddingVertical": 6,
          "paddingHorizontal": 12,
          "borderRadius": 8,
          "fontSize": 13,
          "fontWeight": "500"
        }
      },

      "progressBar": {
        "height": 4,
        "background": "rgba(255, 255, 255, 0.1)",
        "borderRadius": 2,
        "fillGradient": "linear-gradient(90deg, #D4FF2B, #4ECDC4)"
      },

      "bottomSheet": {
        "background": "#1C1C1E",
        "borderTopLeftRadius": 24,
        "borderTopRightRadius": 24,
        "handleWidth": 36,
        "handleHeight": 5,
        "handleColor": "rgba(255, 255, 255, 0.3)",
        "handleBorderRadius": 2.5,
        "overlayColor": "rgba(0, 0, 0, 0.6)"
      },

      "tabBar": {
        "background": "#000000",
        "borderTopColor": "rgba(255, 255, 255, 0.08)",
        "activeColor": "#D4FF2B",
        "inactiveColor": "rgba(255, 255, 255, 0.5)",
        "iconSize": 24,
        "labelSize": 10
      },

      "listItem": {
        "background": "#1C1C1E",
        "pressedBackground": "#2C2C2E",
        "separatorColor": "rgba(255, 255, 255, 0.08)",
        "paddingVertical": 14,
        "paddingHorizontal": 16,
        "iconContainerSize": 36,
        "iconContainerRadius": 8
      }
    },

    "onboarding": {
      "screens": [
        {
          "id": "welcome",
          "title": "Welcome to Silo",
          "subtitle": "Your creative vault for content inspiration",
          "visual": "logo-animation",
          "ctaText": "Get Started"
        },
        {
          "id": "capture",
          "title": "Capture Everything",
          "subtitle": "Screenshots, ideas, hooksâ€”save inspiration from anywhere in seconds",
          "visual": "capture-illustration",
          "features": [
            { "icon": "camera-outline", "text": "Screenshot import" },
            { "icon": "share-outline", "text": "Share extension" },
            { "icon": "sparkles-outline", "text": "AI auto-categorization" }
          ]
        },
        {
          "id": "organize",
          "title": "AI-Powered Organization",
          "subtitle": "Let AI analyze and categorize your content automatically",
          "visual": "organize-illustration",
          "categories": [
            { "name": "Video Ideas", "color": "#34C759", "icon": "bulb-outline" },
            { "name": "Hooks", "color": "#FF9F0A", "icon": "flash-outline" },
            { "name": "Thumbnails", "color": "#5AC8FA", "icon": "image-outline" },
            { "name": "Scripts", "color": "#BF5AF2", "icon": "document-text-outline" }
          ]
        },
        {
          "id": "create",
          "title": "Turn Ideas Into Content",
          "subtitle": "Transform your saved inspiration into scripts, outlines, and video concepts",
          "visual": "create-illustration",
          "ctaText": "Start Creating"
        }
      ],
      "styling": {
        "indicatorActiveColor": "#D4FF2B",
        "indicatorInactiveColor": "rgba(255, 255, 255, 0.2)",
        "indicatorSize": 8,
        "indicatorSpacing": 12
      }
    },

    "splashScreen": {
      "background": "#000000",
      "logoSize": 120,
      "logoColor": "#FFFFFF",
      "animation": "pulse-glow",
      "duration": 2000
    }
  }
}